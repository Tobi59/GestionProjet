<?xml version="1.0" encoding="UTF-8"?>

    <FrameLayout tools:context="fragments.TweetDetailFragment" android:background="@drawable/blue_round_corners_background" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/white_blue_round_corners_selector" android:layout_height="wrap_content" android:layout_width="match_parent">

    <ImageView android:layout_height="123dp" android:layout_width="133dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:src="@drawable/twitter" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/tweetImageView"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/tweetAliasTextView" app:layout_constraintStart_toEndOf="@+id/tweetImageView" android:text="alias"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/tweetNameTextView" app:layout_constraintStart_toEndOf="@+id/tweetAliasTextView" android:text="name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView android:layout_height="0dp" android:layout_width="0dp" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/tweetTextTextView" app:layout_constraintStart_toEndOf="@+id/tweetImageView" android:text="tweetText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/tweetNameTextView" app:layout_constraintBottom_toBottomOf="@+id/tweetImageView"/>

    <Button android:background="@drawable/blue_round_corners_background" android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/tweetReplyButton" android:text="@string/tweet_reply" app:layout_constraintTop_toBottomOf="@+id/tweetImageView"/>

    <Button android:background="@drawable/blue_round_corners_background" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/tweetRetweetButton" app:layout_constraintStart_toEndOf="@+id/tweetReplyButton" android:text="@string/tweet_retweet" app:layout_constraintTop_toBottomOf="@+id/tweetImageView" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/tweetStarButton" android:layout_marginBottom="8dp"/>

    <Button android:background="@drawable/blue_round_corners_background" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="8dp" android:id="@+id/tweetStarButton" android:text="@string/tweet_star" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/tweetImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>